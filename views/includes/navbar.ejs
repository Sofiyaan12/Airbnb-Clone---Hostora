<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #e63946;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.5rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    width: 100%;
  }

  @media (max-width: 768px) {
    .navbar-nav .nav-link {
      text-align: center;
    }

    .search-input {
      margin-bottom: 0.5rem;
    }

    form.d-flex {
      flex-direction: column;
      align-items: stretch;
    }

    .search-btn {
      margin-top: 0.5rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-light border-bottom sticky-top shadow-sm">
  <div class="container-fluid">
    <a class="navbar-brand fs-4" href="/listings">
      <i class="fa-regular fa-compass me-1"></i> Hostora
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav me-auto mb-2 mb-md-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
      </ul>

      <div class="me-md-3 my-2 my-md-0">
        <form class="d-flex" role="search">
          <input class="form-control search-input me-2" type="search" placeholder="Search destinations" aria-label="Search" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <ul class="navbar-nav mb-2 mb-md-0">
        <% if (!currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
        <% } %>
        <% if (currentUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
